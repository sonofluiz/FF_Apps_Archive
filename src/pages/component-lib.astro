---
/**
 * Component Test Page - Astro Version
 * Comprehensive demonstration of all design system components
 */

/** Layout Import */
import Layout from '../layouts/base.astro';
/** UI Component Imports */
import RadioButton from '../components/UI/RadioButton.astro';
import Button from '../components/UI/Button.astro';
import ButtonCta from '../components/UI/ButtonCta.astro';
import ButtonCategory from '../components/UI/ButtonCategory.astro';
import ButtonAppTypes from '../components/UI/ButtonAppTypes.astro';
import CardAppTypes from '../components/UI/CardAppTypes.astro';
import ButtonColorTheme from '../components/UI/ButtonColorTheme.astro';
import ButtonClose from '../components/UI/ButtonClose.astro';
import ButtonMenu from '../components/UI/ButtonMenu.astro';
import Modal from '../components/UI/Modal.astro';
import ChipHostedStatus from '../components/UI/ChipHostedStatus.astro';
import BadgeNotification from '../components/UI/BadgeNotification.astro';
import ButtonSearch from '../components/UI/ButtonSearch.astro';
import InputSearchBar from '../components/UI/InputSearchBar.astro';
import SearchGraphic from '../components/UI/SearchGraphic.astro';
import LabelPageNavButton from '../components/UI/LabelPageNavButton.astro';
import ButtonPageNav from '../components/UI/ButtonPageNav.astro';
import MenuPageNavButtons from '../components/UI/MenuPageNavButtons.astro';
import InputText from '../components/UI/InputText.astro';
import TagAppStatus from '../components/UI/TagAppStatus.astro';
import MenuAppCategories from '../components/UI/MenuAppCategories.astro';
import ButtonReadMore from '../components/UI/ButtonReadMore.astro';
import ButtonGalleryNav from '../components/UI/ButtonGalleryNav.astro';
import H1 from '../components/UI/H1.astro';
import H2 from '../components/UI/H2.astro';
import LabelSectionNumber from '../components/UI/LabelSectionNumber.astro';
import LabelWarning from '../components/UI/LabelWarning.astro';
import Link from '../components/UI/Link.astro';
import LinkPublisher from '../components/UI/LinkPublisher.astro';
import ButtonLetter from '../components/UI/ButtonLetter.astro';
import ButtonsAlphabetPagination from '../components/UI/ButtonsAlphabetPagination.astro';
import ButtonAlphabetMenuExpansion from '../components/UI/ButtonAlphabetMenuExpansion.astro';
import MenuAlphabetPagination from '../components/UI/MenuAlphabetPagination.astro';
import MenuNavSidebar from '../components/UI/MenuNavSidebar.astro';
import AppIcon from '../components/UI/AppIcon.astro';
import CardApp from '../components/UI/CardApp.astro';
import SectionAppDetail from '../components/UI/SectionAppDetail.astro';
import SectionAppDescription from '../components/UI/SectionAppDescription.astro';
import SectionVersion from '../components/UI/SectionVersion.astro';
import SectionReleaseNotes from '../components/UI/SectionReleaseNotes.astro';
import SectionSupport from '../components/UI/SectionSupport.astro';
import SectionScreenGallery from '../components/UI/SectionScreenGallery.astro';
import Header from '../components/UI/Header.astro';
import ButtonBack from '../components/UI/ButtonBack.astro';
import SectionHeadline from '../components/UI/SectionHeadline.astro';
import HeadlineAppType from '../components/UI/HeadlineAppType.astro';
import Footer from '../components/UI/Footer.astro';
/** Icon Component Imports */
import IconCloud from '../components/icons/app-types/IconCloud.astro';
import IconDownload from '../components/icons/app-types/IconDownload.astro';
---

<Layout title="Component Library - Design System">
  <div class="component-library">
    <main class="container">
      <!-- Page Header -->
      <header class="page-header">
        <h1 class="heading-lg">Component Library</h1>
        <p class="body-lg text-faded">
          Interactive components using pure CSS design tokens
        </p>
      </header>

      <div class="divider"></div>

      <!-- Alphabet Menu Expansion Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">Alphabet Menu Expansion Button</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">ButtonAlphabetMenuExpansion.astro</code>
            </div>
            
            <!-- Both Variants -->
            <section class="section">
              <h2 class="heading-xs">Both Variants</h2>
              <p class="body-sm text-faded">Toggle button for expanding/collapsing the alphabet menu</p>
              
              <div style="display: flex; gap: var(--spacing-24); align-items: flex-start;">
                <div style="display: flex; flex-direction: column; gap: var(--spacing-8);">
                  <p class="body-xs text-faded">Collapsed (Chevron Down)</p>
                  <ButtonAlphabetMenuExpansion expanded={false} />
                </div>
                
                <div style="display: flex; flex-direction: column; gap: var(--spacing-8);">
                  <p class="body-xs text-faded">Expanded (Close X)</p>
                  <ButtonAlphabetMenuExpansion expanded={true} />
                </div>
              </div>
            </section>

            <!-- Interactive States -->
            <section class="section">
              <h2 class="heading-xs">Interactive States</h2>
              <p class="body-sm text-faded">Default, hover, and focus states (3 states per variant)</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-16);">
                <div>
                  <p class="body-xs" style="margin-bottom: var(--spacing-8);">States: Default (0.5px border) → Hover (2px purple) → Focus (2px faded)</p>
                  <div style="display: flex; gap: var(--spacing-12);">
                    <ButtonAlphabetMenuExpansion expanded={false} />
                    <ButtonAlphabetMenuExpansion expanded={true} />
                  </div>
                </div>
              </div>
            </section>

            <!-- Design Tokens Used -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Colors</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--on-surface-light-primary</code>
                      <span class="body-xs">Icon & border (collapsed)</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-faded</code>
                      <span class="body-xs">Icon (expanded) & focus border</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Borders</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--border-sm</code>
                      <span class="body-xs">Default state (0.5px)</span>
                    </div>
                    <div class="token-item">
                      <code>--border-lg</code>
                      <span class="body-xs">Hover & focus states (2px)</span>
                    </div>
                    <div class="token-item">
                      <code>inset: -2px -2px 0 -2px</code>
                      <span class="body-xs">Negative inset for 2px borders</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Border Radius</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">Top corners only (4px default)</span>
                    </div>
                    <div class="token-item">
                      <code>6px</code>
                      <span class="body-xs">Top corners when border expands (hover/focus)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Dimensions</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>44px × 44px</code>
                      <span class="body-xs">Fixed button size</span>
                    </div>
                    <div class="token-item">
                      <code>--icon-sm</code>
                      <span class="body-xs">Icon size (16px)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Special</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>Top/Left/Right borders only</code>
                      <span class="body-xs">No bottom border</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </section>

      <!-- Alphabet Pagination Buttons Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">Alphabet Pagination Buttons</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">ButtonsAlphabetPagination.astro</code>
            </div>
            
            <!-- Interactive Example -->
            <section class="section">
              <h2 class="heading-xs">Interactive Example</h2>
              <p class="body-sm text-faded">Full alphabet pagination with "All" and "#" options</p>
              
              <div style="max-width: 800px; margin: 0 auto;">
                <ButtonsAlphabetPagination selectedLetter="A" />
              </div>
            </section>

            <!-- Different Selections -->
            <section class="section">
              <h2 class="heading-xs">Selection Examples</h2>
              <p class="body-sm text-faded">Different letters can be selected</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-24);">
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Selected: "All"</p>
                  <div style="max-width: 800px;">
                    <ButtonsAlphabetPagination selectedLetter="All" />
                  </div>
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Selected: "M"</p>
                  <div style="max-width: 800px;">
                    <ButtonsAlphabetPagination selectedLetter="M" />
                  </div>
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Selected: "#"</p>
                  <div style="max-width: 800px;">
                    <ButtonsAlphabetPagination selectedLetter="#" />
                  </div>
                </div>
              </div>
            </section>

            <!-- Design Tokens Used -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Layout</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--spacing-12</code>
                      <span class="body-xs">Column gap between letters</span>
                    </div>
                    <div class="token-item">
                      <code>28px</code>
                      <span class="body-xs">Row gap (custom value)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Borders</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--border-sm</code>
                      <span class="body-xs">Side borders (0.5px)</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-border-low</code>
                      <span class="body-xs">Side border color</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Border Radius</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">Grid border radius</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Nested Component</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>ButtonLetter.astro</code>
                      <span class="body-xs">Individual letter buttons</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </section>

      <!-- Alphabet Pagination Menu Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">Alphabet Pagination Menu</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">MenuAlphabetPagination.astro</code>
            </div>
            
            <!-- Interactive Demo -->
            <section class="section">
              <h2 class="heading-xs">Interactive Demo</h2>
              <p class="body-sm text-faded">Click the expansion button to toggle between collapsed and expanded states</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-24);">
                <div style="display: flex; flex-direction: column; gap: var(--spacing-8);">
                  <p class="body-xs text-faded">Starts Collapsed (Default)</p>
                  <div style="background: var(--surface-light-low); padding: var(--spacing-16); border-radius: var(--radius-md);">
                    <MenuAlphabetPagination defaultExpanded={false} />
                  </div>
                </div>
                
                <div style="display: flex; flex-direction: column; gap: var(--spacing-8);">
                  <p class="body-xs text-faded">Starts Expanded</p>
                  <div style="background: var(--surface-light-low); padding: var(--spacing-16); border-radius: var(--radius-md);">
                    <MenuAlphabetPagination defaultExpanded={true} />
                  </div>
                </div>
              </div>
            </section>

            <!-- Component States -->
            <section class="section">
              <h2 class="heading-xs">Menu States</h2>
              <p class="body-sm text-faded">The menu has two states controlled by clicking the expansion button</p>
              
              <div class="states-grid">
                <div class="state-demo">
                  <p class="body-xs text-faded">Collapsed</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded state-description">
                      Only expansion button visible • Chevron down icon • Alphabet buttons hidden
                    </p>
                  </div>
                </div>

                <div class="state-demo">
                  <p class="body-xs text-faded">Expanded</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded state-description">
                      Expansion button shows X icon • All alphabet buttons visible • Smooth transition
                    </p>
                  </div>
                </div>
              </div>
            </section>

            <!-- Design Tokens Used -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Spacing</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--spacing-4</code>
                      <span class="body-xs">Gap between buttons and expansion button (collapsed)</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-8</code>
                      <span class="body-xs">Container vertical padding, gap in expanded state</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-12</code>
                      <span class="body-xs">Menu bottom padding</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-16</code>
                      <span class="body-xs">Nested component top padding override (expanded)</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-36</code>
                      <span class="body-xs">Menu top padding</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Colors</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--surface-light-background-start</code>
                      <span class="body-xs">Container gradient start</span>
                    </div>
                    <div class="token-item">
                      <code>--surface-light-background-end</code>
                      <span class="body-xs">Container gradient end</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-primary</code>
                      <span class="body-xs">Bottom border color</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-border-low</code>
                      <span class="body-xs">Right border (collapsed), top border (expanded)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Borders</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--border-sm</code>
                      <span class="body-xs">All borders (0.5px)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Radius</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">Top-left and top-right corners (4px)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Nested Components</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>ButtonAlphabetMenuExpansion.astro</code>
                      <span class="body-xs">Toggle button with dynamic icon</span>
                    </div>
                    <div class="token-item">
                      <code>ButtonsAlphabetPagination.astro</code>
                      <span class="body-xs">Alphabet button grid</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </section>

      <!-- App Card Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">App Card</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>

        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">CardApp.astro</code>
            </div>
            
            <!-- Overview -->
            <section class="section">
              <h2 class="heading-xs">Overview</h2>
              <p class="body-sm text-faded">Card component for displaying app information with icon, title, categories, ratings, and status. Features three interactive states (default, hover, focus) with gradient background and border overlay pattern. Automatically handles category icons and app type status.</p>
              
              <div class="button-group">
                <CardApp 
                  appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                  appTitle="Chess Master"
                  categories={['Games', 'Sports']}
                  appType="Live"
                  starRating="4.8"
                  userCount="1.2k"
                />
              </div>
            </section>

            <!-- Interactive States -->
            <section class="section">
              <h2 class="heading-xs">Interactive States</h2>
              <p class="body-sm text-faded">Three interactive states with border overlay pattern</p>
              
              <div class="states-grid" style="gap: var(--spacing-16);">
                <div class="state-demo">
                  <p class="body-xs text-faded">Default</p>
                  <div class="state-box">
                    <CardApp 
                      appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                      appTitle="Music Player"
                      categories={['Music', 'Social']}
                      appType="Live"
                      starRating="5.0"
                      userCount="850"
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Subtle gradient background • Light border
                  </p>
                </div>

                <div class="state-demo">
                  <p class="body-xs text-faded">Hover</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">↑ Hover me</p>
                    <CardApp 
                      appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                      appTitle="Music Player"
                      categories={['Music', 'Social']}
                      appType="Live"
                      starRating="5.0"
                      userCount="850"
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Purple border (--on-surface-light-primary)
                  </p>
                </div>

                <div class="state-demo">
                  <p class="body-xs text-faded">Focus</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">Tab</p>
                    <CardApp 
                      appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                      appTitle="Music Player"
                      categories={['Music', 'Social']}
                      appType="Live"
                      starRating="5.0"
                      userCount="850"
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    2px purple border (--on-surface-light-primary) • Overrides hover
                  </p>
                </div>
              </div>
            </section>

            <!-- Category Icon Variants -->
            <section class="section">
              <h2 class="heading-xs">Category Variants</h2>
              <p class="body-sm text-faded">Cards can display one or two categories with automatic icon and text handling</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-16);">
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Two Categories</p>
                  <CardApp 
                    appTitle="Photo Editor"
                    categories={['Photo & Video', 'Kids']}
                    appType="Packaged"
                    starRating="4.5"
                    userCount="2.5k"
                  />
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">One Category</p>
                  <CardApp 
                    appTitle="Travel Guide"
                    categories={['Travel']}
                    appType="Live"
                    starRating="4.2"
                    userCount="532"
                  />
                </div>
              </div>
            </section>

            <!-- Icon Slot Customization -->
            <section class="section">
              <h2 class="heading-xs">App Type Variants</h2>
              <p class="body-sm text-faded">Four app types with automatic status text, chip, and icon selection</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-16);">
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Live (Hosted + Live Chip + IconCloud)</p>
                  <CardApp 
                    appTitle="Web Dashboard"
                    categories={['Business', 'Productivity']}
                    appType="Live"
                    starRating="4.9"
                    userCount="5.2k"
                  />
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Packaged (Packaged + No Chip + IconPackage)</p>
                  <CardApp 
                    appTitle="Browser Extension"
                    categories={['Utilities']}
                    appType="Packaged"
                    starRating="4.6"
                    userCount="12k"
                  />
                </div>

                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Privileged (Privileged + No Chip + IconDownload)</p>
                  <CardApp 
                    appTitle="Video Editor"
                    categories={['Entertainment']}
                    appType="Privileged"
                    starRating="4.7"
                    userCount="3.8k"
                  />
                </div>

                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Dead (Hosted + Dead Chip + IconSmileyXEyes)</p>
                  <CardApp 
                    appTitle="Deprecated Tool"
                    categories={['Utilities']}
                    appType="Dead"
                    starRating="2.1"
                    userCount="45"
                  />
                </div>
              </div>
            </section>

            <!-- Design Tokens Used -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Spacing Tokens</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--spacing-4</code>
                      <span class="body-xs">4px gaps</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-8</code>
                      <span class="body-xs">8px gaps</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-12</code>
                      <span class="body-xs">12px padding</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Border & Radius</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">4px border radius</span>
