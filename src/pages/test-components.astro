---
/**
 * Component Test Page - Astro Version
 * Comprehensive demonstration of all design system components
 */

import Layout from '../layouts/base.astro';
import RadioButton from '../components/UI/RadioButton.astro';
import Button from '../components/UI/Button.astro';
import ButtonCta from '../components/UI/ButtonCta.astro';
import ButtonCategory from '../components/UI/ButtonCategory.astro';
import ButtonAppTypes from '../components/UI/ButtonAppTypes.astro';
import CardAppTypes from '../components/UI/CardAppTypes.astro';
import ButtonColorTheme from '../components/UI/ButtonColorTheme.astro';
import BadgeNotification from '../components/UI/BadgeNotification.astro';
import IconBooksRegular from '../components/icons/categories/IconBooksRegular.astro';
import IconCameraRegular from '../components/icons/categories/IconCameraRegular.astro';
import IconMusicNotesRegular from '../components/icons/categories/IconMusicNotesRegular.astro';
import IconGameControllerRegular from '../components/icons/categories/IconGameControllerRegular.astro';
import IconShapes from '../components/icons/app-types/IconShapes.astro';
import IconPackage from '../components/icons/app-types/IconPackage.astro';
import IconCloud from '../components/icons/app-types/IconCloud.astro';
import IconDownload from '../components/icons/app-types/IconDownload.astro';
import IconSmileyXEyes from '../components/icons/app-types/IconSmileyXEyes.astro';
---

<Layout title="Component Library - Design System">
  <div class="component-library">
    <main class="container">
      <!-- Page Header -->
      <header class="page-header">
        <h1 class="heading-lg">Component Library</h1>
        <p class="body-lg text-faded">
          Interactive components using pure CSS design tokens
        </p>
      </header>

      <div class="divider"></div>

      <!-- Radio Button Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">Radio Button</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">RadioButton.astro</code>
            </div>
            
            <!-- Interactive Radio Group -->
            <section class="section">
              <h2 class="heading-xs">Basic Radio Group</h2>
              <p class="body-sm text-faded">Select an option to see state changes</p>
              
              <form class="radio-group">
                <RadioButton
                  name="options"
                  value="option1"
                  label="Option 1"
                />
                <RadioButton
                  name="options"
                  value="option2"
                  label="Option 2"
                />
                <RadioButton
                  name="options"
                  value="option3"
                  label="Option 3"
                />
              </form>
              
              <div class="selection-display">
                <span class="body-xs">Selected: </span>
                <code class="body-xs" data-selection-output="options">none</code>
              </div>
            </section>

            <!-- Color Selection -->
            <section class="section">
              <h2 class="heading-xs">Color Selection</h2>
              <p class="body-sm text-faded">Horizontal layout with multiple options</p>
              
              <form class="radio-group-horizontal">
                <RadioButton
                  name="color"
                  value="blue"
                  label="Blue"
                />
                <RadioButton
                  name="color"
                  value="purple"
                  label="Purple"
                />
                <RadioButton
                  name="color"
                  value="orange"
                  label="Orange"
                />
                <RadioButton
                  name="color"
                  value="red"
                  label="Red"
                />
              </form>
              
              <div class="selection-display">
                <span class="body-xs">Selected color: </span>
                <code class="body-xs" data-selection-output="color">none</code>
              </div>
            </section>

            <!-- States Visualization -->
            <section class="section">
              <h2 class="heading-xs">Component States</h2>
              <p class="body-sm text-faded">Hover over buttons to see state changes</p>
              
              <div class="states-grid">
                <!-- Default State -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Default</p>
                  <div class="state-box">
                    <RadioButton
                      name="state-default"
                      value="default"
                      label="Button"
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Light border • Empty circle
                  </p>
                </div>

                <!-- Hover State -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Hover</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">↑ Hover me</p>
                    <RadioButton
                      name="state-hover"
                      value="hover"
                      label="Button"
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Primary border • Empty circle
                  </p>
                </div>

                <!-- Focus State (keyboard navigation) -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Focus</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">Tab</p>
                    <RadioButton
                      name="state-focus"
                      value="focus"
                      label="Button"
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Thick border • Focus ring
                  </p>
                </div>

                <!-- Active State (checked/selected) -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Active</p>
                  <div class="state-box">
                    <RadioButton
                      name="state-active"
                      value="active"
                      label="Button"
                      checked={true}
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Primary bg • Filled circle • White text
                  </p>
                </div>

                <!-- Active + Focus State (checked + keyboard navigation) -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Active + Focus</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">Tab</p>
                    <RadioButton
                      name="state-active-focus"
                      value="active-focus"
                      label="Button"
                      checked={true}
                    />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Primary bg • Filled circle • White text • Focus ring
                  </p>
                </div>
              </div>
            </section>

            <!-- Design Tokens Reference -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Spacing</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--spacing-4</code>
                      <span class="body-xs">Gap between icon and label</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-8</code>
                      <span class="body-xs">Padding (horizontal & vertical)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Borders</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--border-sm</code>
                      <span class="body-xs">0.5px default border</span>
                    </div>
                    <div class="token-item">
                      <code>--border-lg</code>
                      <span class="body-xs">2px active/focus border</span>
                    </div>
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">4px corner radius</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Colors</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--surface-light-mid</code>
                      <span class="body-xs">Background (default)</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-primary</code>
                      <span class="body-xs">Selected background & text</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-on-primary</code>
                      <span class="body-xs">White text (selected)</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-border-high</code>
                      <span class="body-xs">Default border</span>
