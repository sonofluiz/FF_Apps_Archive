            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">ButtonCta.astro</code>
            </div>
            
            <!-- Interactive Examples -->
            <section class="section">
              <h2 class="heading-xs">Call to Action Button</h2>
              <p class="body-sm text-faded">Prominent button for primary actions with icon</p>
              
              <div class="button-group">
                <ButtonCta label="CTA Button" href="#" />
                <ButtonCta label="Get Started" href="#" />
