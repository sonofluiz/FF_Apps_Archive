---
/**
 * Component Test Page - Astro Version
 * Comprehensive demonstration of all design system components
 */

import Layout from '../layouts/base.astro';
import RadioButton from '../components/UI/RadioButton.astro';
import Button from '../components/UI/Button.astro';
import ButtonCta from '../components/UI/ButtonCta.astro';
import ButtonCategory from '../components/UI/ButtonCategory.astro';
import ButtonAppTypes from '../components/UI/ButtonAppTypes.astro';
import CardAppTypes from '../components/UI/CardAppTypes.astro';
import ButtonColorTheme from '../components/UI/ButtonColorTheme.astro';
import ButtonClose from '../components/UI/ButtonClose.astro';
import ButtonMenu from '../components/UI/ButtonMenu.astro';
import ChipHostedStatus from '../components/UI/ChipHostedStatus.astro';
import BadgeNotification from '../components/UI/BadgeNotification.astro';
import ButtonSearch from '../components/UI/ButtonSearch.astro';
import InputSearchBar from '../components/UI/InputSearchBar.astro';
import SearchGraphic from '../components/UI/SearchGraphic.astro';
import LabelPageNavButton from '../components/UI/LabelPageNavButton.astro';
import ButtonPageNav from '../components/UI/ButtonPageNav.astro';
import MenuPageNavButtons from '../components/UI/MenuPageNavButtons.astro';
import InputText from '../components/UI/InputText.astro';
import TagAppStatus from '../components/UI/TagAppStatus.astro';
import MenuAppCategories from '../components/UI/MenuAppCategories.astro';
import ButtonReadMore from '../components/UI/ButtonReadMore.astro';
import ButtonGalleryNav from '../components/UI/ButtonGalleryNav.astro';
import H1 from '../components/UI/H1.astro';
import H2 from '../components/UI/H2.astro';
import LabelSectionNumber from '../components/UI/LabelSectionNumber.astro';
import LabelWarning from '../components/UI/LabelWarning.astro';
import Link from '../components/UI/Link.astro';
import LinkPublisher from '../components/UI/LinkPublisher.astro';
import ButtonLetter from '../components/UI/ButtonLetter.astro';
import ButtonsAlphabetPagination from '../components/UI/ButtonsAlphabetPagination.astro';
import ButtonAlphabetMenuExpansion from '../components/UI/ButtonAlphabetMenuExpansion.astro';
import MenuAlphabetPagination from '../components/UI/MenuAlphabetPagination.astro';
import MenuNavSidebar from '../components/UI/MenuNavSidebar.astro';
import AppIcon from '../components/UI/AppIcon.astro';
import CardApp from '../components/UI/CardApp.astro';
import IconBooksRegular from '../components/icons/categories/IconBooksRegular.astro';
import IconBooksFilled from '../components/icons/categories/IconBooksFilled.astro';
import IconCameraRegular from '../components/icons/categories/IconCameraRegular.astro';
import IconCameraFilled from '../components/icons/categories/IconCameraFilled.astro';
import IconMusicNotesRegular from '../components/icons/categories/IconMusicNotesRegular.astro';
import IconMusicNotesFilled from '../components/icons/categories/IconMusicNotesFilled.astro';
import IconGameControllerRegular from '../components/icons/categories/IconGameControllerRegular.astro';
import IconGameControllerFilled from '../components/icons/categories/IconGameControllerFilled.astro';
import IconShapes from '../components/icons/app-types/IconShapes.astro';
import IconPackage from '../components/icons/app-types/IconPackage.astro';
import IconCloud from '../components/icons/app-types/IconCloud.astro';
import IconDownload from '../components/icons/app-types/IconDownload.astro';
import IconSmileyXEyes from '../components/icons/app-types/IconSmileyXEyes.astro';
---

<Layout title="Component Library - Design System">
  <div class="component-library">
    <main class="container">
      <!-- Page Header -->
      <header class="page-header">
        <h1 class="heading-lg">Component Library</h1>
        <p class="body-lg text-faded">
          Interactive components using pure CSS design tokens
        </p>
      </header>

      <div class="divider"></div>

      <!-- App Icon Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">App Icon</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">AppIcon.astro</code>
            </div>
            
            <!-- Interactive Examples -->
            <section class="section">
              <h2 class="heading-xs">Icon Variants</h2>
              <p class="body-sm text-faded">52x52px app icons with 4px border radius</p>
              
              <div class="button-group" style="gap: var(--spacing-24); align-items: center;">
                <!-- Gradient Fallback -->
                <div style="text-align: center;">
                  <AppIcon alt="Gradient Placeholder" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">Gradient (No Image)</p>
                </div>
                
                <!-- With Image -->
                <div style="text-align: center;">
                  <AppIcon src="https://ffapps.danielherr.software/app/checkers-1/364744-128.png" alt="App with Image" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">With Image Source</p>
                </div>
              </div>
            </section>

            <!-- Size Examples -->
            <section class="section">
              <h2 class="heading-xs">Standard Sizes</h2>
              <p class="body-sm text-faded">Three standard app icon sizes defined by design tokens</p>
              
              <div class="button-group" style="gap: var(--spacing-24); align-items: center;">
                <div style="text-align: center;">
                  <AppIcon size="sm" alt="Small Icon" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">SM - 52px</p>
                  <code class="body-xxs">--app-icon-sm</code>
                </div>
                
                <div style="text-align: center;">
                  <AppIcon size="md" alt="Medium Icon" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">MD - 92px</p>
                  <code class="body-xxs">--app-icon-md</code>
                </div>
                
                <div style="text-align: center;">
                  <AppIcon size="lg" alt="Large Icon" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">LG - 138px</p>
                  <code class="body-xxs">--app-icon-lg</code>
                </div>
                
                <div style="text-align: center;">
                  <AppIcon src="https://ffapps.danielherr.software/app/checkers-1/364744-128.png" size="sm" alt="Small Icon with Image" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">SM - 52px</p>
                  <code class="body-xxs">With Image</code>
                </div>
                
                <div style="text-align: center;">
                  <AppIcon src="https://ffapps.danielherr.software/app/checkers-1/364744-128.png" size="md" alt="Medium Icon with Image" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">MD - 92px</p>
                  <code class="body-xxs">With Image</code>
                </div>
                
                <div style="text-align: center;">
                  <AppIcon src="https://ffapps.danielherr.software/app/checkers-1/364744-128.png" size="lg" alt="Large Icon with Image" />
                  <p class="body-xs text-faded" style="margin-top: var(--spacing-8);">LG - 138px</p>
                  <code class="body-xxs">With Image</code>
                </div>
              </div>
            </section>

            <!-- Design Tokens Used -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Size Tokens</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--app-icon-sm</code>
                      <span class="body-xs">52px (default)</span>
                    </div>
                    <div class="token-item">
                      <code>--app-icon-md</code>
                      <span class="body-xs">92px</span>
                    </div>
                    <div class="token-item">
                      <code>--app-icon-lg</code>
                      <span class="body-xs">138px</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Border Radius</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">4px rounded corners</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Special Gradient</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--on-surface-any-gradient-start</code>
                      <span class="body-xs">Violet-50</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-any-gradient-end</code>
                      <span class="body-xs">Red-50</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Image Positioning</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>left: -6.52%</code>
                      <span class="body-xs">Image offset (matches Figma)</span>
                    </div>
                    <div class="token-item">
                      <code>size: 113.04%</code>
                      <span class="body-xs">Image scale (matches Figma)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Props</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>src (optional)</code>
                      <span class="body-xs">Image URL</span>
                    </div>
                    <div class="token-item">
                      <code>alt (optional)</code>
                      <span class="body-xs">Alt text</span>
                    </div>
                    <div class="token-item">
                      <code>size (optional)</code>
                      <span class="body-xs">'sm' | 'md' | 'lg' (default: 'sm')</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Usage Notes -->
            <section class="section">
              <h2 class="heading-xs">Usage Notes</h2>
              <div class="token-list">
                <div class="token-item">
                  <strong class="body-sm">Dynamic Image Source</strong>
                  <p class="body-xs text-faded">Component accepts <code>src</code> prop for loading external app icon images</p>
                </div>
                <div class="token-item">
                  <strong class="body-sm">Gradient Fallback</strong>
                  <p class="body-xs text-faded">When no <code>src</code> is provided, displays special gradient (Violet-50 to Red-50) using design tokens</p>
                </div>
                <div class="token-item">
                  <strong class="body-sm">Deviations from Guide</strong>
                  <p class="body-xs text-faded">Uses dynamic src prop (not design tokens) since image source is unknown at build time. Image positioning uses percentage values to match Figma export.</p>
                </div>
              </div>
            </section>
          </div>
        </div>
      </section>

      <!-- App Card Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">App Card</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>

        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">CardApp.astro</code>
            </div>
            
            <!-- Overview -->
            <section class="section">
              <h2 class="heading-xs">Overview</h2>
              <p class="body-sm text-faded">Card component for displaying app information with icon, title, categories, ratings, and status. Features three interactive states (default, hover, focus) with gradient background and border overlay pattern.</p>
              
              <div class="button-group">
                <CardApp 
                  appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                  appTitle="Chess Master"
                  categoryText="Games, Sports"
                  categoryIcon1="IconGameControllerRegular"
                  categoryIcon2="IconTennisBallRegular"
                  showCategoryIcon2 = {true}
                  starRating="4.8"
                  userCount="1.2k"
                  statusText="Web App"
                  statusShowHostedChip = {true}
                  statusHostedChipVariant="live"
                  >
                  <IconCloud slot="statusIcon" />
                </CardApp>
              </div>
            </section>

            <!-- Interactive States -->
            <section class="section">
              <h2 class="heading-xs">Interactive States</h2>
              <p class="body-sm text-faded">Three interactive states with border overlay pattern</p>
              
              <div class="states-grid" style="gap: var(--spacing-16);">
                <div class="state-demo">
                  <p class="body-xs text-faded">Default</p>
                  <div class="state-box">
                    <CardApp 
                      appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                      appTitle="Music Player"
                      categoryText="Music, Audio"
                      categoryIcon1="IconMusicNotesRegular"
                      categoryIcon2="IconRadioRegular"
                      starRating="5.0"
                      userCount="850"
                      statusText="Hosted"
                      >
                      <IconCloud slot="statusIcon" />
                    </CardApp>
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Subtle gradient background • Light border
                  </p>
                </div>

                <div class="state-demo">
                  <p class="body-xs text-faded">Hover</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">↑ Hover me</p>
                    <CardApp 
                      appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                      appTitle="Music Player"
                      categoryText="Music, Audio"
                      categoryIcon1="IconMusicNotesRegular"
                      categoryIcon2="IconRadioRegular"
                      starRating="5.0"
                      userCount="850"
                      statusText="Desktop App"
                      >
                      <IconCloud slot="statusIcon" />
                    </CardApp>
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Purple border (--on-surface-light-primary)
                  </p>
                </div>

                <div class="state-demo">
                  <p class="body-xs text-faded">Focus</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">Tab</p>
                    <CardApp 
                      appIconSrc="https://ffapps.danielherr.software/app/checkers-1/364744-128.png"
                      appTitle="Music Player"
                      categoryText="Music, Audio"
                      categoryIcon1="IconMusicNotesRegular"
                      categoryIcon2="IconRadioRegular"
                      starRating="5.0"
                      userCount="850"
                      statusText="Desktop App"
                      >
                      <IconCloud slot="statusIcon" />
                    </CardApp>
                  </div>
                  <p class="body-xxs text-faded state-description">
                    2px purple border (--on-surface-light-primary) • Overrides hover
                  </p>
                </div>
              </div>
            </section>

            <!-- Category Icon Variants -->
            <section class="section">
              <h2 class="heading-xs">Category Icon Variants</h2>
              <p class="body-sm text-faded">Cards can display one or two category icons</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-16);">
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Two Category Icons</p>
                  <CardApp 
                    appTitle="Photo Editor"
                    categoryText="Photo, Design"
                    categoryIcon1="IconCameraRegular"
                    categoryIcon2="IconPinwheelRegular"
                    showCategoryIcon2={true}
                    starRating="4.5"
                    userCount="2.5k"
                    statusText="Extension"
                    >
                    <IconCloud slot="statusIcon" />
                  </CardApp>
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">One Category Icon</p>
                  <CardApp 
                    appTitle="Travel Guide"
                    categoryText="Travel"
                    categoryIcon1="IconCompassRegular"
                    showCategoryIcon2={false}
                    starRating="4.2"
                    userCount="532"
                    statusText="Web App"
                    >
                    <IconCloud slot="statusIcon" />
                  </CardApp>
                </div>
              </div>
            </section>

            <!-- Icon Slot Customization -->
            <section class="section">
              <h2 class="heading-xs">App Type Icons</h2>
              <p class="body-sm text-faded">Four app types with corresponding statusIcon slot icons (defaults to IconCloud)</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-16);">
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Hosted (IconCloud) - Default</p>
                  <CardApp 
                    appTitle="Web Dashboard"
                    categoryText="Business, Productivity"
                    categoryIcon1="IconBriefcaseRegular"
                    showCategoryIcon2={false}
                    starRating="4.9"
                    userCount="5.2k"
                    statusText="Hosted"
                    statusHostedChipVariant="live"
                  >
                    <IconCloud slot="statusIcon" />
                  </CardApp>
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Packaged (IconPackage)</p>
                  <CardApp 
                    appTitle="Browser Extension"
                    categoryText="Utilities"
                    categoryIcon1="IconShieldRegular"
                    showCategoryIcon2={false}
                    starRating="4.6"
                    userCount="12k"
                    statusText="Packaged"
                    statusShowHostedChip={false}
                  >
                    <IconPackage slot="statusIcon" />
                  </CardApp>
                </div>

                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Privileged (IconDownload)</p>
                  <CardApp 
                    appTitle="Video Editor"
                    categoryText="Media, Creativity"
                    categoryIcon1="IconFilmStripRegular"
                    showCategoryIcon2={false}
                    starRating="4.7"
                    userCount="3.8k"
                    statusText="Privileged"
                    statusShowHostedChip={false}
                  >
                    <IconDownload slot="statusIcon" />
                  </CardApp>
                </div>

                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Dead (IconSmileyXEyes)</p>
                  <CardApp 
                    appTitle="Deprecated Tool"
                    categoryText="Legacy"
                    categoryIcon1="IconWarningRegular"
                    showCategoryIcon2={false}
                    starRating="2.1"
                    userCount="45"
                    statusText="Hosted"
                    statusHostedChipVariant="dead"
                  >
                    <IconSmileyXEyes slot="statusIcon" />
                  </CardApp>
                </div>
              </div>
            </section>

            <!-- Design Tokens Used -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
                  <h3 class="body-sm">Spacing Tokens</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--spacing-4</code>
                      <span class="body-xs">4px gaps</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-8</code>
                      <span class="body-xs">8px gaps</span>
                    </div>
                    <div class="token-item">
                      <code>--spacing-12</code>
                      <span class="body-xs">12px padding</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Border & Radius</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--radius-md</code>
                      <span class="body-xs">4px border radius</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-border-low</code>
                      <span class="body-xs">Default border</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-primary</code>
                      <span class="body-xs">Hover & focus border</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Background Gradient</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--card-gradient-light-blue-start</code>
                      <span class="body-xs">Subtle gradient start (3% opacity)</span>
                    </div>
                    <div class="token-item">
                      <code>--card-gradient-light-blue-end</code>
                      <span class="body-xs">Subtle gradient end (3% opacity)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Typography</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>H2 Component</code>
                      <span class="body-xs">Metropolis Bold, 16px/20px</span>
                    </div>
                    <div class="token-item">
                      <code>--body-xxs-size/line</code>
                      <span class="body-xs">Inter Regular, 10px/16px (categories)</span>
                    </div>
                    <div class="token-item">
                      <code>--body-xs-size/line</code>
                      <span class="body-xs">Inter Regular, 12px/18px (ratings)</span>
                    </div>
                  </div>
                </div>

                <div class="token-category">
                  <h3 class="body-sm">Semantic Colors</h3>
                  <div class="token-list">
                    <div class="token-item">
                      <code>--on-surface-light-regular</code>
                      <span class="body-xs">Primary text</span>
                    </div>
                    <div class="token-item">
                      <code>--on-surface-light-faded</code>
                      <span class="body-xs">Secondary text & icons</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Usage Notes -->
            <section class="section">
              <h2 class="heading-xs">Usage Notes</h2>
              <div class="token-list">
                <div class="token-item">
                  <strong class="body-sm">Nested Components</strong>
                  <p class="body-xs text-faded">Uses 7 nested components: AppIcon, H2, TagAppStatus, IconStar, IconUsers, and 2 dynamic category icons</p>
                </div>
                <div class="token-item">
                  <strong class="body-sm">Category Icons</strong>
                  <p class="body-xs text-faded">At least 1 category icon required, second is optional. Icons must be from icons/categories/ folder</p>
                </div>
                <div class="token-item">
                  <strong class="body-sm">Border Overlay Pattern</strong>
                  <p class="body-xs text-faded">Uses absolute positioned overlay for consistent border transitions across all interactive states</p>
                </div>
                <div class="token-item">
                  <strong class="body-sm">Interactive States</strong>
                  <p class="body-xs text-faded">Hover state overridden by focus with :hover:not(:focus-visible). Active state includes scale(0.98) for tactile feedback</p>
                </div>
                <div class="token-item">
                  <strong class="body-sm">Deviations from Guide</strong>
                  <p class="body-xs text-faded">Uses dynamic icon imports with component name strings for flexible category icon selection</p>
                </div>
              </div>
            </section>
          </div>
        </div>
      </section>

      <!-- Alphabet Pagination Buttons Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">Alphabet Pagination Buttons</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">ButtonsAlphabetPagination.astro</code>
            </div>
            
            <!-- Interactive Example -->
            <section class="section">
              <h2 class="heading-xs">Interactive Example</h2>
              <p class="body-sm text-faded">Full alphabet pagination with "All" and "#" options</p>
              
              <div style="max-width: 800px; margin: 0 auto;">
                <ButtonsAlphabetPagination selectedLetter="A" />
              </div>
            </section>

            <!-- Different Selections -->
            <section class="section">
              <h2 class="heading-xs">Selection Examples</h2>
              <p class="body-sm text-faded">Different letters can be selected</p>
              
              <div style="display: flex; flex-direction: column; gap: var(--spacing-24);">
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Selected: "All"</p>
                  <div style="max-width: 800px;">
                    <ButtonsAlphabetPagination selectedLetter="All" />
                  </div>
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Selected: "M"</p>
                  <div style="max-width: 800px;">
                    <ButtonsAlphabetPagination selectedLetter="M" />
                  </div>
                </div>
                
                <div>
                  <p class="body-xs text-faded" style="margin-bottom: var(--spacing-8);">Selected: "#"</p>
                  <div style="max-width: 800px;">
                    <ButtonsAlphabetPagination selectedLetter="#" />
                  </div>
                </div>
