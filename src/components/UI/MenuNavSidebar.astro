---
/**
 * ========================================
 * MENU NAV SIDEBAR COMPONENT
 * ========================================
 * Vertical navigation menu with app types and categories sections
 * 
 * Features:
 * - App Types section with 5 options (All, Packaged, Privileged, Hosted, Dead Hosted)
 * - Categories section with full category list (27 categories)
 * - Uses H2 headings for section titles
 * - Uses ButtonAppTypes (label variant) with simplified appType API
 * - Uses ButtonCategory (label variant) for categories with automatic icon selection
 * - Width: 260px (matches design spec)
 * 
 * Design Tokens:
 * - Spacing: var(--spacing-24) between sections, var(--spacing-12) between header and buttons
 * - Layout: Flexbox column with no gaps between buttons for seamless list
 * 
 * Usage:
 * <MenuNavSidebar />
 */

import H2 from './H2.astro';
import ButtonAppTypes from './ButtonAppTypes.astro';
import ButtonCategory from './ButtonCategory.astro';
---

<nav class="menu-nav-sidebar" aria-label="Main navigation">
  <!-- App Types Section -->
  <div class="menu-section">
    <div class="section-header">
      <H2 text="App Types" />
    </div>
    
    <div class="button-list">
      <ButtonAppTypes appType="All" variant="label" active={false} />
      <ButtonAppTypes appType="Packaged" variant="label" active={false} />
      <ButtonAppTypes appType="Privileged" variant="label" active={false} />
      <ButtonAppTypes appType="Live" variant="label" active={false} />
      <ButtonAppTypes appType="Dead" variant="label" active={false} />
    </div>
  </div>

  <!-- Categories Section -->
  <div class="menu-section">
    <div class="section-header">
      <H2 text="Categories" />
    </div>
    
    <div class="button-list">
      <ButtonCategory variant="label" category="Books" active={false} />
      <ButtonCategory variant="label" category="Books & Comics" active={false} />
      <ButtonCategory variant="label" category="Business" active={false} />
      <ButtonCategory variant="label" category="Education" active={false} />
      <ButtonCategory variant="label" category="Entertainment" active={false} />
      <ButtonCategory variant="label" category="Food & Drink" active={false} />
      <ButtonCategory variant="label" category="Games" active={false} />
      <ButtonCategory variant="label" category="Health & Fitness" active={false} />
      <ButtonCategory variant="label" category="Humor" active={false} />
      <ButtonCategory variant="label" category="Internet" active={false} />
      <ButtonCategory variant="label" category="Kids" active={false} />
      <ButtonCategory variant="label" category="Lifestyle" active={false} />
      <ButtonCategory variant="label" category="Maps & Navigation" active={false} />
      <ButtonCategory variant="label" category="Music" active={false} />
      <ButtonCategory variant="label" category="News" active={false} />
      <ButtonCategory variant="label" category="News & Weather" active={false} />
      <ButtonCategory variant="label" category="Personalization" active={false} />
      <ButtonCategory variant="label" category="Photo & Video" active={false} />
      <ButtonCategory variant="label" category="Productivity" active={false} />
      <ButtonCategory variant="label" category="Reference" active={false} />
      <ButtonCategory variant="label" category="Science & Tech" active={false} />
      <ButtonCategory variant="label" category="Shopping" active={false} />
      <ButtonCategory variant="label" category="Social" active={false} />
      <ButtonCategory variant="label" category="Sports" active={false} />
      <ButtonCategory variant="label" category="Travel" active={false} />
      <ButtonCategory variant="label" category="Utilities" active={false} />
      <ButtonCategory variant="label" category="Weather" active={false} />
    </div>
  </div>
</nav>

<style>
  /* Main Container */
  .menu-nav-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-24);
    width: 260px;
    padding: var(--spacing-16) 0 var(--spacing-24) 0;
    margin: 0;
    background: var(--surface-light-low);
    border-right: var(--border-sm) solid var(--on-surface-light-border-low);
  }

  /* Section Container */
  .menu-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-12);
    width: 100%;
    padding: 0 var(--spacing-36) 0 var(--spacing-36);
  }

  /* Section Header */
  .section-header {
    padding: 0 var(--spacing-8);
  }

  /* Button List - no gap for seamless vertical list */
  .button-list {
    display: flex;
    flex-direction: column;
    gap: 0;
    width: 100%;
  }
</style>